{
	boost::progress_timer t;
	int elapsed_time = t.elapsed();

	// std::string thing = boost::lexical_cast <std::string> (elapsed_time);
	// MessageBoxA(NULL,thing.c_str() , "oo", MB_OK);
	// MessageBoxA(NULL, "c", "oo", MB_OK);
	if (elapsed_time == 0)
	{
		SoundPlay(0);
		MessageBoxA(NULL, "c", "oo", MB_OK);
	}

}

