		SoundPlay(1);
		// Sound[0].pMediaControl->Stop();
		// MessageBoxA(NULL, "c", "oo", MB_OK);
		// boost:: thread my_thread(&hello_world);
		// my_thread.join();

	}
	catch (Exception &e)
	{
		ShowMessage(e.Message);
	}
}
